{
  "name": "civictheme-theme",
  "version": "1.8.0",
  "private": true,
  "description": "CivicTheme Drupal theme.",
  "homepage": "https://github.com/civictheme/civictheme",
  "bugs": "https://github.com/civictheme/monorepo-drupal/issues",
  "repository": "https://github.com/civictheme/monorepo-drupal.git",
  "license": "GPL-2.0-or-later",
  "engines": {
    "node": ">=18.14"
  },
  "scripts": {
    "add-lint-exclusions": "php scripts/add_phpcs_exclusions.php dist,storybook-static,lib/uikit",
    "build": "npm run dist && export STORYBOOK_FULL=1 && npm run build-storybook -- --quiet",
    "dist:watch": "node build.js base build watch styles styles_editor styles_admin styles_layout styles_variables js assets base",
    "build-storybook": "npm run dist && storybook build",
    "dist": "node build.js storybook build styles styles_variables js assets constants base",
    "dist:dev": "npm run build",
    "lint": "eslint ./components ./.storybook ./webpack && stylelint '{components,assets/sass}/**/*.scss'",
    "lint-fix": "eslint ./components ./.storybook ./webpack --fix && stylelint 'components/**/*.scss' --fix",
    "postinstall": "npm run uikit-install && npm run add-lint-exclusions",
    "reset": "rm -rf node_modules > /dev/null; rm -rf lib/uikit > /dev/null",
    "storybook": "storybook dev -p 6006",
    "uikit-install": "rm -Rf lib/uikit > /dev/null 2>&1 && mkdir -p lib/uikit && cp -R node_modules/@civictheme/uikit lib && rm -Rf lib/uikit/dist lib/uikit/storybook-static > /dev/null 2>&1",
    "splitcss": "node splitcss.js"
  },
  "dependencies": {
    "@civictheme/uikit": "github:civictheme/uikit#feature/CIVIC-1947-storybook-upgrade"
  },
  "devDependencies": {
    "@alexskrypnyk/scss-variables-extractor": "^0.1.1",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/html-vite": "^8.4.7",
    "@storybook/manager-api": "^8.4.7",
    "@storybook/theming": "^8.4.7",
    "@whitespace/storybook-addon-html": "^6.1.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import-newlines": "^1.4.0",
    "glob": "^11.0.0",
    "sass": "1.77.5",
    "storybook": "^8.4.7",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "vite": "^5.4.8",
    "vite-plugin-twig-drupal": "^1.4.2"
  },
  "type": "module"
}
